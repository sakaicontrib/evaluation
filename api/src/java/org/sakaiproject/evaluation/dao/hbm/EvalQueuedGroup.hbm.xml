<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<!-- Evaluation project lead: Aaron Zeckoski (aaronz@vt.edu) -->
<hibernate-mapping default-cascade="none">
    <class name="org.sakaiproject.evaluation.model.EvalQueuedGroup" table="EVAL_QUEUED_GROUP" dynamic-insert="false" dynamic-update="false">
        <id name="id" type="java.lang.Long" unsaved-value="null">
            <column name="ID" />
            <generator class="native" />
        </id>
        <property name="creationDate" type="java.util.Date">
            <column name="CREATION_DATE" not-null="true" />
        </property>
        <property name="groupId" type="string">
            <column name="GROUP_ID" not-null="true" length="255" />
        </property>
        <property name="evaluationId" type="long">
            <column name="EVALUATION_ID" not-null="true" />
        </property>
        <property name="emailType" type="string">
            <column name="EMAIL_TYPE" not-null="true" length="255" />
        </property>
        <property name="groupLock" type="string" index="eval_lock_name">
            <column name="GROUP_LOCK" not-null="true" length="255" />
        </property>
        <property name="TSStreamId" type="long">
            <column name="TS_STREAM_ID" />
        </property>
         <property name="emailBuilt" type="java.lang.Boolean">
            <column name="EMAIL_BUILT" />
        </property>
    </class>
</hibernate-mapping>