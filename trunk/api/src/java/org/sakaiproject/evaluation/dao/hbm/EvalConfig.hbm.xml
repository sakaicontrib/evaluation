<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<!-- Evaluation project lead: Aaron Zeckoski (aaronz@vt.edu) -->
<hibernate-mapping default-cascade="none">
    <class name="org.sakaiproject.evaluation.model.EvalConfig" table="EVAL_CONFIG" dynamic-insert="false" dynamic-update="false">
        <id name="id" type="java.lang.Long" unsaved-value="null">
            <column name="ID" />
            <generator class="native" />
        </id>
        <property name="lastModified" type="java.util.Date">
            <column name="LAST_MODIFIED" not-null="true" />
        </property>
        <property name="name" type="string" index="eval_config_name">
            <column name="NAME" not-null="true" unique="true" length="255" />
        </property>
        <property name="value" type="string">
            <column name="VALUE" not-null="true" length="255" />
        </property>
    </class>
</hibernate-mapping>