   		<property name="userDirectoryService" ref="org.sakaiproject.user.api.UserDirectoryService" />
	</bean>

   <!-- Handles data access to external (to the app) services -->
   <bean id="org.sakaiproject.evaluation.logic.EvalExternalLogic"
      class="org.sakaiproject.evaluation.logic.impl.EvalExternalLogicImpl"
      init-method="init">
